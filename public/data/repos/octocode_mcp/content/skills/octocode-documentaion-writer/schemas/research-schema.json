{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://octocode-documentaion-writer.v3/research.json",
  "title": "Research Findings Output",
  "description": "Answers and context gathered for engineering questions",
  "type": "object",
  "required": [
    "metadata",
    "findings"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "generated_at",
        "version",
        "agent",
        "total_questions_researched"
      ],
      "properties": {
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "const": "3.0"
        },
        "agent": {
          "type": "string",
          "const": "researcher"
        },
        "total_questions_researched": {
          "type": "integer"
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "question_id",
          "status",
          "answer",
          "code_references"
        ],
        "properties": {
          "question_id": {
            "type": "string",
            "description": "ID matching the question from questions.json"
          },
          "status": {
            "type": "string",
            "enum": [
              "answered",
              "partial",
              "not_found",
              "skipped"
            ]
          },
          "answer": {
            "type": "string",
            "description": "Comprehensive answer to the question based on code evidence"
          },
          "code_references": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "file"
              ],
              "properties": {
                "file": {
                  "type": "string"
                },
                "line_start": {
                  "type": "integer"
                },
                "line_end": {
                  "type": "integer"
                },
                "snippet": {
                  "type": "string"
                }
              }
            }
          },
          "related_symbols": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Functions, classes, or types relevant to this finding"
          }
        }
      }
    }
  }
}
