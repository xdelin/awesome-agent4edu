{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "downlevelIteration": true
  },
  "include": ["*.ts", "utils/*.ts", "detectors/*.ts"],
  "exclude": ["node_modules"]
}
