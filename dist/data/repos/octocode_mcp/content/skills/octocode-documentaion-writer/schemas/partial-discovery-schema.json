{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://octocode-documentaion-writer.v3/partial-discovery.json",
  "title": "Partial Discovery Output",
  "description": "Schema for partial results from discovery sub-agents",
  "type": "object",
  "oneOf": [
    {
      "$comment": "1A: Language & Manifests",
      "required": ["discovery"],
      "properties": {
        "discovery": {
          "type": "object",
          "required": ["primary_language", "is_monorepo", "project_type"],
          "properties": {
            "primary_language": { "type": "string" },
            "is_monorepo": { "type": "boolean" },
            "project_type": { "type": "string" },
            "language_distribution": { "type": "object" },
            "package_count": { "type": "integer" },
            "packages": { "type": "array" }
          }
        }
      }
    },
    {
      "$comment": "1B: Components",
      "required": ["discovery"],
      "properties": {
        "discovery": {
          "type": "object",
          "required": ["components"],
          "properties": {
            "components": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["path", "type"],
                "properties": {
                  "path": { "type": "string" },
                  "name": { "type": "string" },
                  "type": { "type": "string" },
                  "file_count": { "type": "integer" }
                }
              }
            }
          }
        }
      }
    },
    {
      "$comment": "1C: Dependencies",
      "required": ["architecture"],
      "properties": {
        "architecture": {
          "type": "object",
          "required": ["dependencies"],
          "properties": {
            "dependencies": {
              "type": "object",
              "properties": {
                "internal": { "type": "array" },
                "external": { "type": "array" }
              }
            }
          }
        }
      }
    },
    {
      "$comment": "1D: Flows & APIs",
      "required": ["flows", "apis"],
      "properties": {
        "flows": {
          "type": "object",
          "required": ["strategy", "flows"],
          "properties": {
            "strategy": { "type": "string" },
            "flows": { "type": "array" }
          }
        },
        "apis": {
          "type": "object",
          "required": ["components"],
          "properties": {
            "total_apis": { "type": "integer" },
            "components": { "type": "array" }
          }
        }
      }
    }
  ]
}