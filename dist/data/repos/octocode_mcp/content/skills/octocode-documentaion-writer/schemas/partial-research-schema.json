{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://octocode-documentaion-writer.v3/partial-research.json",
  "title": "Partial Research Output",
  "description": "Schema for partial research results from parallel research agents",
  "type": "object",
  "required": [
    "metadata",
    "findings"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "version",
        "generated_at",
        "repository_path",
        "batch_id"
      ],
      "properties": {
        "version": {
          "type": "string",
          "const": "3.0"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "repository_path": {
          "type": "string"
        },
        "agent": {
          "type": "string",
          "const": "researcher"
        },
        "batch_id": {
          "type": "string",
          "description": "ID of the research batch (e.g. researcher-0)"
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "question_id",
          "status",
          "answer",
          "code_references"
        ],
        "properties": {
          "question_id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "answered",
              "partial",
              "not_found",
              "skipped"
            ]
          },
          "answer": {
            "type": "string"
          },
          "code_references": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "file"
              ],
              "properties": {
                "file": {
                  "type": "string"
                },
                "line_start": {
                  "type": "integer"
                },
                "line_end": {
                  "type": "integer"
                },
                "snippet": {
                  "type": "string"
                }
              }
            }
          },
          "missing_context": {
            "type": "string"
          }
        }
      }
    }
  }
}