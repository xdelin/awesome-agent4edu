{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://octocode-documentaion-writer.v3/state.json",
  "title": "Orchestration State",
  "description": "State tracking for documentation generation pipeline",
  "type": "object",
  "required": ["version", "repository_path", "phase", "started_at"],
  "properties": {
    "version": {
      "type": "string",
      "const": "3.0"
    },
    "repository_path": {
      "type": "string"
    },
    "phase": {
      "type": "string",
      "enum": [
        "initialized",
        "discovery-analysis-running",
        "discovery-analysis-complete",
        "discovery-analysis-failed",
        "engineer-questions-running",
        "engineer-questions-complete",
        "engineer-questions-failed",
        "research-running",
        "research-complete",
        "research-failed",
        "orchestrator-running",
        "orchestrator-complete",
        "orchestrator-failed",
        "documentation-running",
        "documentation-complete",
        "documentation-partial",
        "documentation-failed",
        "qa-running",
        "qa-complete",
        "qa-failed",
        "complete",
        "failed"
      ]
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "current_agent": {
      "type": ["string", "null"]
    },
    "completed_agents": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "discovery-analysis",
          "engineer-questions",
          "researcher",
          "orchestrator",
          "documentation-writer",
          "qa-validator"
        ]
      }
    },
    "token_usage": {
      "type": "object",
      "properties": {
        "discovery_analysis": {"type": "integer", "minimum": 0},
        "engineer_questions": {"type": "integer", "minimum": 0},
        "research": {"type": "integer", "minimum": 0},
        "orchestrator": {"type": "integer", "minimum": 0},
        "documentation": {"type": "integer", "minimum": 0},
        "qa": {"type": "integer", "minimum": 0},
        "total": {"type": "integer", "minimum": 0}
      }
    },
    "retry_state": {
      "type": "object",
      "description": "Tracks retry attempts per phase to prevent data loss",
      "properties": {
        "discovery_analysis": {
          "type": "object",
          "properties": {
            "attempts": {"type": "integer", "minimum": 0, "default": 0},
            "max_attempts": {"type": "integer", "default": 3},
            "partial_results": {"type": "array", "items": {"type": "string"}},
            "last_error": {"type": "string"}
          }
        },
        "engineer_questions": {
          "type": "object",
          "properties": {
            "attempts": {"type": "integer", "minimum": 0, "default": 0},
            "max_attempts": {"type": "integer", "default": 3},
            "last_error": {"type": "string"}
          }
        },
        "research": {
          "type": "object",
          "properties": {
            "attempts": {"type": "integer", "minimum": 0, "default": 0},
            "max_attempts": {"type": "integer", "default": 3},
            "total_batches": {"type": "integer", "minimum": 0},
            "completed_batches": {"type": "array", "items": {"type": "string"}},
            "failed_batches": {"type": "array", "items": {"type": "string"}},
            "last_error": {"type": "string"}
          }
        },
        "orchestrator": {
          "type": "object",
          "properties": {
            "attempts": {"type": "integer", "minimum": 0, "default": 0},
            "max_attempts": {"type": "integer", "default": 3},
            "last_error": {"type": "string"}
          }
        },
        "documentation": {
          "type": "object",
          "properties": {
            "attempts_per_writer": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "attempts": {"type": "integer", "minimum": 0},
                  "max_attempts": {"type": "integer", "default": 3},
                  "completed_files": {"type": "array", "items": {"type": "string"}},
                  "last_error": {"type": "string"}
                }
              }
            }
          }
        },
        "qa": {
          "type": "object",
          "properties": {
            "attempts": {"type": "integer", "minimum": 0, "default": 0},
            "max_attempts": {"type": "integer", "default": 2},
            "last_error": {"type": "string"}
          }
        }
      }
    },
    "files_generated": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "qa_results": {
      "type": ["object", "null"],
      "properties": {
        "overall_score": {"type": "integer", "minimum": 0, "maximum": 100},
        "quality_rating": {
          "type": "string",
          "enum": ["excellent", "good", "fair", "needs-improvement"]
        },
        "ready_for_use": {"type": "boolean"},
        "critical_gaps": {"type": "integer", "minimum": 0}
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["phase", "message", "timestamp"],
        "properties": {
          "phase": {"type": "string"},
          "message": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"},
          "recoverable": {"type": "boolean"}
        }
      }
    }
  }
}
